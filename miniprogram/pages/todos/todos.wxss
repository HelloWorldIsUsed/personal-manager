.userinfo {
  margin-top: 40rpx;
  height: 140rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  justify-content:space-between;
  align-items: center;
  transition: all 300ms ease;  
}

.userinfo-con{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  margin-right: 40rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.todos-info-con{
  font-size: 30rpx;
  margin-right: 20rpx;
}

.todos-info-num{
  margin-left: 10rpx;
}

.add-todo{
