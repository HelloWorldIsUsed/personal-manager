/* miniprogram/pages/plan/plan.wxss */
.userinfo {
  margin-top: 40rpx;
  height: 140rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  justify-content:space-between;
  align-items: center;
  transition: all 300ms ease;  
}

.userinfo-con{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  margin-right: 40rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.plan-info-con{
  display: flex;
  align-items: center;
  font-size: 30rpx;
  margin-right: 20rpx;
}

.plan-info-num{
  margin-left: 10rpx;
}

.add-plan{
  font-size:60rpx;
  margin:20px 10px;
}

.edit-plan{
  font-size:60rpx;
}

.delete-plan{
  font-size: 55rpx;
  margin-right: 10rpx;
}

.check-plan{
  font-size: 60rpx;
  margin-right: 10rpx;
}

.rollback-plan{
  font-size: 60rpx;
  margin-right: 10rpx;
}

.finish{
  color: #34c349;
}
.plan{
  color: #f2584c;  
}
.undos{
  color: #7e7f7e;
}

.weui-loadmore_line{
  margin: 0;
  width: 100%;
  padding: 200rpx 0;
}
.plan-time{
  font-size:14px;
}



